<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jordanforsythe.repairloginsystem.ServiceJobUpdate">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editText_ServiceJobSerach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:ems="10"
                android:hint="@string/service_job_number"
                android:inputType="number" />

            <ImageButton
                android:id="@+id/imageButton_ServiceJobSearch"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_margin="14dp"
                android:background="#0000"
                android:scaleType="fitCenter"
                android:text="@string/search_job"
                app:srcCompat="@drawable/searchbutton" />

            <TextView
                android:id="@+id/textView_ServiceJobNumberReturned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_ServiceJobAgentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_ServiceJobCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_ServiceJobCustomerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_ServiceJobNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButton_ServiceJobAddNotes"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_margin="14dp"
                android:background="#0000"
                android:scaleType="fitCenter"
                android:contentDescription="@string/add_notes_button"
                app:srcCompat="@drawable/addnotes" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
