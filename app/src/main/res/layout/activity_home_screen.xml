<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jordanforsythe.repairloginsystem.HomeScreen">

    <TextView
        android:id="@+id/textView_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/holder"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_Logout"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:contentDescription="@string/logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logoutbutton" />

    <ImageButton
        android:id="@+id/imageButton_RepairLoginScreen"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:contentDescription="@string/login_repair"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Username"
        app:srcCompat="@drawable/loginrepairbutton" />

    <ImageButton
        android:id="@+id/imageButton_CheckRepairStatus"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="28dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:contentDescription="@string/check_repair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_LogoutRepairActivity"
        app:srcCompat="@drawable/checkstatusbutton" />

    <ImageButton
        android:id="@+id/imageButton_EngineerUpdateScreen"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:contentDescription="@string/engineer_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_RepairLoginScreen"
        app:srcCompat="@drawable/engineerhubbutton" />

    <ImageButton
        android:id="@+id/imageButton_LogoutRepairActivity"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="16dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:contentDescription="Logout Repair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Username"
        app:srcCompat="@drawable/logoutrepairbutton" />

    <ImageButton
        android:id="@+id/imageButton_ServiceJobLogin"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:contentDescription="@string/service_job_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_EngineerUpdateScreen"
        app:srcCompat="@drawable/loginservicejobbutton" />

    <ImageButton
        android:id="@+id/imageButton_ServiceJobUpdate"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="28dp"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:contentDescription="@string/update_service_job"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_CheckRepairStatus"
        app:srcCompat="@drawable/updateservicejobutton" />
</android.support.constraint.ConstraintLayout>
