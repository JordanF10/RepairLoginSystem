<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jordanforsythe.repairloginsystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HomeScreen" />

        <activity
            android:name=".LoginRepair"
            android:parentActivityName=".HomeScreen" />

        <activity
            android:name=".CheckRepairStatus"
            android:parentActivityName=".HomeScreen" />

        <activity
            android:name=".EngineerScreen"
            android:parentActivityName=".HomeScreen" />

        <activity
            android:name=".LogoutRepair"
            android:parentActivityName=".HomeScreen" />

        <activity android:name=".ServiceJobLogin"
            android:parentActivityName=".HomeScreen"/>

        <activity android:name=".ServiceJobUpdate"
            android:parentActivityName=".HomeScreen"/>
    </application>

</manifest>